    },
    "deliveryInfo": {
      "type": "hasOne",
      "model": "UserDeliveryInfo",
      "foreignKey": "userDeliveryInfoId"
    },
    "deliveryAddresses": {
      "type": "hasMany",
      "model": "UserDeliveryAddress",
      "foreignKey": "userDeliveryAddressId"
    },
    "shoppingCart": {
      "type": "hasOne",
      "model": "ShoppingCart",
      "foreignKey": "shoppingCartId"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": ["register", "login", "logout", "confirm", "verify"]
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "DENY"
