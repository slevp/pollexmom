    "avatar": {
      "type": "string",
      "oracle": {
        "columnName": "USER_AVATAR"
      }
    },
    "desc": {
      "type": "string",
      "oracle": {
        "columnName": "USER_DESC"
      }
    },
    "totalScore": {
      "type": "number"
    },
    "refereeTel": {
      "type": "string"
    },
    "genre": {
      "type": "number",
      "oracle": {
        "columnName": "USER_GENRE"
      }
    },
    "origin": {
      "type": "number",
      "oracle": {
        "columnName": "USER_ORIGIN"
      }
    },
    "status": {
      "type": "number",
      "oracle": {
        "columnName": "USER_STATUS"
      }
    },
    "created": {
      "type": "date",
      "oracle": {
        "columnName": "CREATED"
      }
    },
    "createdBy": {
      "type": "string",
      "defaultFn": "now",
      "oracle": {
        "columnName": "CREATED_BY"
      }
    },
    "modified": {
      "type": "date",
      "defaultFn": "now",
      "oracle": {
        "columnName": "MODIFIED"
      }
    },
    "modifiedBy": {
      "type": "string",
      "oracle": {
        "columnName": "MODIFIED_BY"
      }
    }
  },
  "hidden": ["password"],
  "validations": [],
  "relations": {
    "personalInfo": {
      "type": "hasOne",
      "model": "UserInfo",
