      "collection": "c_users"
    },
    "oracle": {
      "schema": "S_POLLEXMOM",
      "table": "T_USER"
    }
  },
  "properties": {
    "weChatId": {
      "type": "string",
      "index": {"unique": true}
    },
    "username": {
      "type": "string",
      "index": {"unique": true},
      "oracle": {
        "columnName": "USER_NAME"
      }
    },
    "password": {
      "type": "string",
      "oracle": {
        "columnName": "USER_PASSWORD"
      }
    },
    "email": {
      "type": "string",
      "index": {"unique": true},
      "oracle": {
        "columnName": "USER_EMAIL"
      }
    },
    "tel": {
      "type": "string",
      "index": {"unique": true},
      "oracle": {
        "columnName": "USER_TEL"
      }
    },
    "roleName": {
      "type": "string"
    },
    "feature": {
      "type": "string"
